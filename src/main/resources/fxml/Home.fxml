<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.controlsfx.control.StatusBar?>
<?import atlantafx.base.controls.Card?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.petrinet.controller.HomeController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Nuovo Petri Net" />
                <MenuItem text="Apri..." />
                <MenuItem text="Salva" />
                <SeparatorMenuItem />
                <MenuItem text="Esci" />
            </Menu>
            <Menu text="Modifica">
                <MenuItem text="Annulla" />
                <MenuItem text="Ripeti" />
            </Menu>
            <Menu text="Aiuto">
                <MenuItem text="Informazioni" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Benvenuto nel Petri Net Editor" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Card>
                <header>
                    <Label text="Inizia subito" style="-fx-font-weight: bold;"/>
                </header>
                <content>
                    <VBox spacing="10">
                        <Button text="Crea nuovo Petri Net" maxWidth="Infinity" />
                        <Button text="Apri Petri Net esistente" maxWidth="Infinity" />
                        <Button text="Visualizza tutorial" maxWidth="Infinity" />
                    </VBox>
                </content>
            </Card>

            <Card fx:id="recentProjectsCard">
                <header>
                    <Label text="Progetti recenti" style="-fx-font-weight: bold;"/>
                </header>
                <content>
                    <ListView fx:id="recentProjectsListView" prefHeight="150"/>
                </content>
            </Card>
        </VBox>
    </center>

    <bottom>
        <StatusBar fx:id="statusBar" text="Pronto" />
    </bottom>

    <right>
        <VBox prefWidth="200" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Profilo Utente" style="-fx-font-weight: bold;"/>
            <Label fx:id="usernameLabel" text="Username: Non connesso"/>
            <Label fx:id="userRoleLabel" text="Ruolo: -"/>
            <Button text="Accedi" fx:id="loginButton" maxWidth="Infinity" />
            <Button text="Registrati" fx:id="registerButton" maxWidth="Infinity" />
            <Button text="Esci" fx:id="logoutButton" maxWidth="Infinity" visible="false"/>

            <Separator>
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>
            </Separator>

            <Label text="Azioni Rapide" style="-fx-font-weight: bold;"/>
            <Button text="Le mie Reti" maxWidth="Infinity" />
            <Button text="Condivisi con me" maxWidth="Infinity" />
            <Button text="Impostazioni" maxWidth="Infinity" />
        </VBox>
    </right>
</BorderPane>