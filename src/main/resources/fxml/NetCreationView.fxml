<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.petrinet.controller.NetCreationController">

    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- Left spacer with fixed width matching finish button area -->
            <Region prefWidth="100" HBox.hgrow="NEVER"/>

            <!-- Centered toolbar container -->
            <HBox fx:id="toolbarContainer" alignment="CENTER" HBox.hgrow="ALWAYS"
                  style="-fx-padding: 0;"/>

            <!-- Finish button with fixed width -->
<Button fx:id="finishButton" mnemonicParsing="false" onAction="#onFinishAction"
        style="-fx-background-color: #89b4fa; -fx-text-fill: #1E1E2E; -fx-font-size: 16; -fx-padding: 10 10 10 15; -fx-background-radius: 8;"
        text="Finish" prefWidth="100" HBox.hgrow="NEVER">
    <HBox.margin>
        <Insets right="25" />
    </HBox.margin>
</Button>
        </HBox>
    </top>

    <center>
        <Pane fx:id="canvasContainer" style="-fx-background-color: transparent;"/>
    </center>
</BorderPane>