<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.petrinet.controller.NetCreationController" >
    <top>
        <!-- Top toolbar like the image -->
        <HBox alignment="CENTER" prefHeight="60.0" spacing="20.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>

            <!-- Center toolbar with icons -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #2a2a33; -fx-background-radius: 25; width: 70%;"
                  prefHeight="40.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="5.0" left="150.0" right="159.0" top="5.0"/>
                </padding>
            </HBox>

            <!-- Finish button (right) -->
            <Button text="Finish"
                    style="-fx-background-color: #7dd3fc; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;"
                    prefWidth="100.0" prefHeight="35.0" HBox.hgrow="NEVER"/>
        </HBox>
    </top>

    <center>
        <VBox fx:id="CanvasContainer" alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
        </VBox>
    </center>
</BorderPane>