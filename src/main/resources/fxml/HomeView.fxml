<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.petrinet.controller.HomeController"
            style="-fx-background-color: #1E1E2E;">

    <!-- Top: Header con welcome e bottone New Net -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #302D41; -fx-background-radius: 8;">
            <Label fx:id="userNameLabel" text="Welcome, Guest!"
                   style="-fx-text-fill: #C9CBFF; -fx-font-size: 16; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="New Net" onAction="#handleNewNet"
                    style="-fx-background-color: #C6A0F6; -fx-text-fill: #1E1E2E; -fx-font-weight: bold; -fx-background-radius: 6;"/>
        </HBox>
    </top>

    <!-- Center: Tabella personalizzata -->
    <center>
        <VBox spacing="5" style="-fx-padding: 10;">

            <!-- Header colonna (static row) -->
            <HBox spacing="10" style="-fx-padding: 8 6; -fx-background-color: #302D41; -fx-background-radius: 8;">
                <Label text="Type"          prefWidth="120" style="-fx-text-fill: #BAC2DE; -fx-font-weight: bold; -fx-font-size: 12; -fx-alignment: center"/>
                <Label text="Name"          prefWidth="150" style="-fx-text-fill: #BAC2DE; -fx-font-weight: bold; -fx-font-size: 14; -fx-alignment: center"/>
                <Label text="Author"        prefWidth="120" style="-fx-text-fill: #BAC2DE; -fx-font-weight: bold; -fx-font-size: 14; -fx-alignment: center"/>
                <Label text="Last Modified" prefWidth="120" style="-fx-text-fill: #BAC2DE; -fx-font-weight: bold; -fx-font-size: 12; -fx-alignment: center"/>
                <Label text="Status"        prefWidth="120" style="-fx-text-fill: #BAC2DE; -fx-font-weight: bold; -fx-font-size: 12; -fx-alignment: center"/>
            </HBox>

            <!-- Lista delle reti -->
            <ListView fx:id="netsListView"
                      VBox.vgrow="ALWAYS"
                      prefWidth="600"
                      fixedCellSize="48"
                      style="-fx-background-color: #302D41;
                             -fx-control-inner-background: #302D41;
                             -fx-background-radius: 8;
                             -fx-border-radius: 8;
                             -fx-padding: 4;">
                <!-- Inline hover styling via cell factory in controller -->
            </ListView>
        </VBox>
    </center>

    <!-- Bottom: Stats e Activity Feed -->
    <bottom>
        <VBox spacing="20" style="-fx-padding: 10;">
            <!-- Quick Stats -->
            <Label text="Quick Stats" textFill="#C9CBFF"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox alignment="CENTER_LEFT" prefWidth="280"
                      style="-fx-background-color: #393552; -fx-background-radius: 8; -fx-padding: 20;">
                    <Label text="Total Nets" textFill="#BAC2DE" style="-fx-font-size: 14;"/>
                    <Label fx:id="totalNetsLabel" text="15" textFill="#C9CBFF"
                           style="-fx-font-size: 30; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER_LEFT" prefWidth="280"
                      style="-fx-background-color: #393552; -fx-background-radius: 8; -fx-padding: 20;">
                    <Label text="Simulations Run" textFill="#BAC2DE" style="-fx-font-size: 14;"/>
                    <Label fx:id="simulationsRunLabel" text="50" textFill="#C9CBFF"
                           style="-fx-font-size: 30; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER_LEFT" prefWidth="280"
                      style="-fx-background-color: #393552; -fx-background-radius: 8; -fx-padding: 20;">
                    <Label text="Analyses Performed" textFill="#BAC2DE" style="-fx-font-size: 14;"/>
                    <Label fx:id="analysesPerformedLabel" text="20" textFill="#C9CBFF"
                           style="-fx-font-size: 30; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <!-- Activity Feed -->
            <Label text="Activity Feed" textFill="#C9CBFF"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <VBox fx:id="activityFeedContainer" spacing="10"
                  style="-fx-background-color: #393552; -fx-background-radius: 8; -fx-padding: 20;"/>
        </VBox>
    </bottom>

</BorderPane>
