<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.control.Hyperlink?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.petrinet.controller.HomeController"
            maxHeight="Infinity" maxWidth="Infinity"
            styleClass="root-container">
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="transparent-scrollpane">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 50 20 20 20;">
                <Label fx:id="userNameLabel"
                       styleClass="welcome-label"/>
                <VBox spacing="30" style="-fx-padding: 0 0 0 0;">

                    <VBox fx:id="subNetsSection" spacing="10" styleClass="section-container">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Hyperlink fx:id="subNets" text="Subscriptions"
                                       styleClass="section-title"
                                        onAction="#handleShowAllSubNets"/>
                        </HBox>
                        <StackPane fx:id="subNetsScrollContainer" alignment="CENTER_LEFT">
                            <ScrollPane fx:id="subNetsScrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER"
                                        fitToHeight="true"
                                        styleClass="transparent-scrollpane">
                                <HBox fx:id="subNetsList" spacing="15" styleClass="card-list"/>
                            </ScrollPane>
                            <Rectangle fx:id="subNetsLeftShadow" width="50" StackPane.alignment="CENTER_LEFT" managed="false" visible="false" styleClass="scroll-shadow-left"/>
                            <Rectangle fx:id="subNetsRightShadow" width="50" StackPane.alignment="CENTER_RIGHT" managed="false" visible="false" styleClass="scroll-shadow-right"/>
                        </StackPane>
                    </VBox>

                    <VBox fx:id="myNetsSection" spacing="10" styleClass="section-container">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Hyperlink fx:id="myNets" text="Creations"
                                   styleClass="section-title"
                                       onAction="#handleShowAllMyNets"/>
                        </HBox>
                        <StackPane fx:id="myNetsScrollContainer" alignment="CENTER_LEFT">
                            <ScrollPane fx:id="myNetsScrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER"
                                        fitToHeight="true"
                                        styleClass="transparent-scrollpane">
                                <HBox fx:id="myNetsList" spacing="15" styleClass="card-list"/>
                            </ScrollPane>
                            <Rectangle fx:id="myNetsLeftShadow" width="50" StackPane.alignment="CENTER_LEFT" managed="false" visible="false" styleClass="scroll-shadow-left"/>
                            <Rectangle fx:id="myNetsRightShadow" width="50" StackPane.alignment="CENTER_RIGHT" managed="false" visible="false" styleClass="scroll-shadow-right"/>
                        </StackPane>
                    </VBox>

                    <VBox fx:id="discoverSection" spacing="10" styleClass="section-container">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Hyperlink fx:id="discorver" text="Discover"
                                   styleClass="section-title"
                                       onAction="#handleShowAllDiscover"/>
                        </HBox>
                        <StackPane fx:id="discoverScrollContainer" alignment="CENTER_LEFT">
                            <ScrollPane fx:id="discoverScrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER"
                                        fitToHeight="true"
                                        styleClass="transparent-scrollpane">
                                <HBox fx:id="discoverList" spacing="15" styleClass="card-list"/>
                            </ScrollPane>
                            <Rectangle fx:id="discoverLeftShadow" width="50" StackPane.alignment="CENTER_LEFT" managed="false" visible="false" styleClass="scroll-shadow-left"/>
                            <Rectangle fx:id="discoverRightShadow" width="50" StackPane.alignment="CENTER_RIGHT" managed="false" visible="false" styleClass="scroll-shadow-right"/>
                        </StackPane>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>